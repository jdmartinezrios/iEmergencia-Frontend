body
  overflow-x hidden

.Begin
  background-image url("../../assets/slider/sliderEmergency4.jpeg")
  background-size cover
  background-repeat no-repeat
  background-attachment fixed
  height 52em
  padding-top 7em
  background-position top
  text-align center
  display flex
  justify-content center
  align-items center
  &-title
    color #fff
    font-size 60px
    display block
    margin 0 10% 0 10%
    font-family 'Raleway', sans-serif
    font-weight 600
    text-shadow 0 1px 2px rgba(0, 0, 0, .6)
  &-titleSlide
    color #fff
    font-size 60px
    display block
    padding-bottom 18%
    font-family 'Raleway', sans-serif
    font-weight 600
    text-shadow 0 1px 2px rgba(0, 0, 0, .6)
    text-align center

.Explain
  background-color #FF6437
  height 22em
  text-align center
  color white
  &-title
    font-family 'Raleway', sans-serif
    font-weight bold
    padding 1.5em 0 0.5em 0
    font-size 2em
    margin 0
  &-paragraph
    font-size 1.7em
    font-family 'Raleway', sans-serif
    padding 20px
    margin  0 15%
    font-weight 200

.Phone
  background-color #e8e3e3
  text-align center
  &-wrap
    display flex
    justify-content center
    flex-wrap wrap
  &-title
    font-family 'Raleway', sans-serif
    font-weight bold
    padding 1.5em 0 1.5em 0
    font-size 2em
    margin 0
    background #fff
  &-titleLine
    width 10%
    background black
    height 1px
    display inline-block
    vertical-align middle
    margin 0 0.8em
  &-slider
    margin 0
    padding 0
    border 0
    width 10%
  &-sliderContainer
    width 300px
    height 600px
    background-image url("../../assets/images/work/cel.png")
    background-repeat no-repeat
    background-size 270px 520px
    display inline-block
    padding 0
    border 0
    margin 10% 0 0 0
  &-wrapper
    width 224px
    margin 0 auto
    height 339px
    margin-top 92px
    margin-left 25px
    overflow hidden
    background #7EC5FF
  &-text
    width 600px
    font-size 25px
    color #222
    margin 0 0 0 0
    display flex
    flex-direction column
    align-items center
    justify-content center
    position relative
    left 10%
  &-textParagraph
    font-size 1.2em
    max-width 400px
    width 100%
  &-textTitle
    font-size 50px

img
  width 100%
  height 345px
  margin 0
  padding 0
  border 0
  box-sizing border-box

.Allies
  text-align center
  padding-bottom 5em
  color #ffffff
  background-color #116AB2
  &-title
    font-family 'Raleway', sans-serif
    font-weight bold;
    padding 2.5em 0
    font-size 2em
    margin 0
  &-item
    padding 1em 2em
    width 330px
  &-image
    max-width 330px
    height 150px
  &-wrap
    display flex
    justify-content center
    flex-wrap wrap
    flex 1
.Section-titleLine
  width 10%
  background #fff
  height 2px
  display inline-block
  vertical-align middle
  margin 0 0.8em

#policia
  width 150px
  height 150px

